.list {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.list .picker {
  height: 92rpx;
  width: 100%;
}
.list .picker .pbox {
  width: 100%;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #808080;
}
.list .picker .pbox view {
  width: 100%;
}
.list .picker .pbox .icon-you {
  font-size: 28rpx;
}
.list .picker .pbox_hover {
  color: #383838;
}
.list .name {
  width: 168rpx;
  font-size: 32rpx;
  color: #383838;
}
.list .icon-you {
  font-size: 28rpx;
  color: #999999;
}
.list .input {
  flex: 1;
  height: 100%;
  line-height: 92rpx;
  color: #9080A1;
}
.list .textarea {
  flex: 1;
  height: 100%;
  color: #A9A9A9;
}
.upload-info_item {
  border: none;
  background-color: #F7F8FA;
  border-radius: 4px;
  padding-left: 10px;
}

